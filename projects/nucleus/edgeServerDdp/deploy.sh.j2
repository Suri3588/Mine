#!/bin/bash

scriptDir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
pushd $scriptDir

kubectl get namespaces nucleus
if [ $? -ne 0 ]; then
  echo "nucleus namespace not defined"
  echo "run the shared deploy script"
  exit 1
fi

kubectl -n nucleus apply -f edge-server-ddp-config.yaml
kubectl -n nucleus apply -f edge-server-ddp.yaml
kubectl -n nucleus apply -f ingress-edge-server-ddp.yaml

popd
